@{
    ViewData["Title"] = "Home";
}

<section class="hero">
    <div class="container text-center">
        <h1>Khym Nad</h1>
        <p>Crafting thoughtful digital experiences with clarity and soul.</p>
        <div class="hero-buttons">
            <a href="#projects" class="btn btn-primary">View Work</a>
            <a href="#contact" class="btn btn-outline">Contact</a>
        </div>
    </div>
</section>

<section id="about" class="section">
    <div class="container text-center">
        <img src="~/images/profile.jpg" alt="Profile" class="profile-img">
        <h2>About Me</h2>
        <p>
            I'm a developer passionate about creating elegant, human-centered web applications.
            Minimalism, usability, and beautiful design drive my work.
        </p>
    </div>
</section>

<section id="projects" class="section projects-section">
    <div class="container text-center">
        <h2>Projects</h2>
        <div class="project-grid">
            <div class="project-card">
                <img src="~/images/project1.jpg" alt="Project 1">
                <h3>Minimal Portfolio</h3>
                <p>A modern responsive portfolio design inspired by simplicity.</p>
                <a href="#" class="btn btn-outline">View Details</a>
            </div>
            <div class="project-card">
                <img src="~/images/project2.jpg" alt="Project 2">
                <h3>UI Components</h3>
                <p>Reusable UI components for rapid development and prototyping.</p>
                <a href="#" class="btn btn-outline">View Details</a>
            </div>
        </div>
    </div>
</section>

<section id="contact" class="section">
    <div class="container text-center">
        <h2>Contact</h2>
        <form class="contact-form">
            <input type="text" placeholder="Your Name" required />
            <input type="email" placeholder="Your Email" required />
            <textarea rows="4" placeholder="Your Message" required></textarea>
            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
    </div>
</section>
